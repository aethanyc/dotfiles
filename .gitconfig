[user]
	name = Ting-Yu Lin
	email = aethanyc@gmail.com
[core]
	editor = emacsclient -c -a emacs
	whitespace = cr-at-eol,tab-in-indent
[color]
	ui = true
[i18n]
	filesEncoding = utf-8
[branch]
	autosetuprebase = always
[alias]
	co = checkout
	br = branch
[push]
	default = current
[magit]
	extension = wip-save
[merge]
	tool = emerge
[mergetool "emerge"]
	cmd = emacs --eval \"(ediff-merge-files-with-ancestor \\\"$LOCAL\\\" \\\"$REMOTE\\\" \\\"$BASE\\\" nil \\\"$MERGED\\\")\"
[mergetool]
	prompt = false
[diff]
	tool = ediff
[difftool "ediff"]
	cmd = emacs --eval \"(ediff-files \\\"$LOCAL\\\" \\\"$REMOTE\\\")\"
[difftool]
	prompt = false
