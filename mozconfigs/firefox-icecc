# Build Firefox Desktop using IceCC

. $HOME/.mozconfigs/browser-common

ac_add_options --enable-debug
ac_add_options --disable-optimize

mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/obj-firefox-icecc
mk_add_options 'export CCACHE_PREFIX=icecc'
mk_add_options MOZ_MAKE_FLAGS="-j30"
mk_add_options "export RUSTC_WRAPPER=sccache" # cargo install sccache
